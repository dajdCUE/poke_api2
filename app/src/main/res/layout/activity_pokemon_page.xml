<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.pokemonPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPokStat"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:srcCompat="@mipmap/pokeball_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNamePokePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre" />

            <TextView
                android:id="@+id/tvNameDef"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HP" />

            <TextView
                android:id="@+id/tvHPDef"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="HP" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack" />

        <TextView
            android:id="@+id/tvdefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defense" />

        <TextView
            android:id="@+id/tvSpeciAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Attack" />

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>